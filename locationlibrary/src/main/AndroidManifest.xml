<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.toolyt.location">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".activity.HomeActivity"></activity>

        <service
            android:name="com.toolyt.location.service.MyLocationService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false" />

        <activity
            android:name="com.toolyt.location.activity.LiveMapsActivity"
            android:label="@string/title_activity_live_maps" />

        <service
            android:name="com.toolyt.location.service.DetectedActivitiesIntentService"
            android:exported="false" />

        <activity android:name="com.toolyt.location.activity.AnalyticsActivity" />
        <activity android:name="com.toolyt.location.activity.IdealActivity"></activity>

    </application>

</manifest>